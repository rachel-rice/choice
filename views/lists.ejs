<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lists.</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <%- include('./partials/header') %>
        <h1>List Page</h1>
    </header>


    <!--Create-->

    <form id="createForm" action="/lists/add" method="POST"> 
        <input type="text" name="name" placeholder="List name" required>
        <input type="text" name="description" placeholder="List description" required>
        <button type="submit">Create List</button>
    </form>

    <!--Update-->

    <form id="updateForm" action="/lists/update/:id" method="POST">
        <input type="hidden" name="_id" id="updateId"> <!--Bundle ID with the form data-->
        <input type="text" name="name" id="updateName" placeholder="New list name" required>
        <input type="text" name="description" id="updateDescription" placeholder="New list description" required>
        <button type="submit">Update List</button>
    </form>

   
    

    <!-- Display lists -->
    <ul id="itemList">
        <% lists.forEach((list) => { %>
            <li>
                <span><%= list.name %> : <%= list.description %></span>
                <button onClick="editItem('<%= list._id %>', '<%= list.name %>', '<%= list.description %>')">Edit</button>
                <button onClick="deleteList('<%= list._id %>')">Delete</button>
            </li>
        <% }); %>
    </ul>

    <footer>
        <%- include('./partials/footer') %>
    </footer>   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>

</body>
</html>