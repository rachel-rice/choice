<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lists.</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <%- include('./partials/header') %>
       
    </header>
        <h1>Random Selection</h1>
    <div>

    </div>

    <!--Add List-->

    <form id="createForm" action="/lists/add" method="POST"> 
        <input type="text" name="name" placeholder="List name" required>
        <input type="text" name="description" placeholder="List description" required>
        <button type="submit">Create List</button>
    </form>

    <!--Update/Save -->

    <form id="listUpdateForm" action="/lists/update/:id" method="POST">
      <input type="hidden" name="_id" id="listUpdateId">
      <input type="text" name="name" id="listUpdateName" placeholder="New list name" required>
      <input type="text" name="description" id="listUpdateDescription" placeholder="New list description" required>
      <button type="submit">Save changes</button>
    </form>

    <!-- Display Lists -->
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <ul id="itemList" class="list-group w-25">
            <% lists.forEach((list) => { %>
                <li class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                          <h6 class="mb-0"><%= list.name %></h6>
                          <p class="mb-0 opacity-75"><%= list.description %></p>
                            
                          <button type="button" class="btn btn-primary" onClick="editList('<%= list._id %>', '<%= list.name %>', '<%= list.description %>')">Edit</button>
                          <button class="" onClick="deleteList('<%= list._id %>')">Delete</button>
                         
                        </div>
                      </div>
                </li>
            <% }); %> 
        </ul>
      </div>

    <footer>
        <%- include('./partials/footer') %>
    </footer>   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>

</body>
</html>