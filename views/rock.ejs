<body>
    <header>
        <%- include('./partials/header') %>
        <h1>Rock, Paper, Scissors</h1>
    </header>
    <main>
        <div class="container-sm px-4 py-5 my-5 text-center">
            <h1 class="display-5 fw-bold text-body-emphasis">Rock, Paper, Scissors</h1>
            <div class="col-lg-6 mx-auto">
              <p class="lead mb-4">Choose rock, paper, or scissors to play against the computer.</p>
              <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <form action="/rock" method="POST">
                    <button type="submit" name="choice" value="rock">🪨 Rock</button>
                    <button type="submit" name="choice" value="paper">📄 Paper</button>
                    <button type="submit" name="choice" value="scissors">✂️ Scissors</button>
                </form>
        
              </div>
             
            </div>
            <% if (result) { %>
                <section>
                    <h2>Game Result</h2>
                    <p><strong>Your Choice:</strong> <%= playerChoice %></p>
                    <p><strong>Computer's Choice:</strong> <%= computerChoice %></p>
                    <p><strong>Result:</strong> You <%= result %>!</p>
                </section>
            <% } %>
    
            <% if (error) { %>
                <section>
                    <h2>Error</h2>
                    <p><%= error %></p>
                </section>
            <% } %>
          </div>
