<!-- Random Pick -->

<h3 class="mb-4 text-center text-md-start">Randomizer</h3>

<div class="row g-3">

  <div class="text-center mb-5">
    <h4 class="fw-light text-muted mb-4">Pick a Random Item</h4>
  </div>
      
  <div class="row mb-5 justify-content-center">
    <div class="col-md-6 text-center">
  
      <form id="randomForm">
        <input type="hidden" name="listId" value="<%= list._id %>">
        <button type="button" id="pickButton" class="btn btn-outline-dark btn-standard">
          <i class="bi bi-shuffle me-1"></i>Pick
        </button>
      </form>
      <h2 id="result" class="mt-2 text-primary"></h2>
    </div>
  </div> 
    
  <!-- Display List of Items -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mb-3"><%= list.name %></h3>
      <ul id="itemList" class="list-group shadow-sm rounded">
        <% items.forEach((item) => { %>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div>
              <h6 class="mb-1 fw-bold"><%= item.name %></h6>
              <p class="mb-0 text-muted"><%= item.description %></p>
            </div>
            <div class="btn-group-sm d-flex gap-2" role="group"> 
              <button type="button" class="btn btn-outline-dark flex-fill" onClick="editItem('<%= item._id %>', '<%= item.name %>', '<%= item.description %>')"><i class="bi bi-pencil me-1"></i>Edit</button>
              <button type="button" class="btn btn-outline-danger flex-fill" onClick="deleteItem('<%= item._id %>')"><i class="bi bi-trash me-1"></i>Delete</button>
            </div>
          </li>
        <% }); %> 
      </ul>
    </div>
  </div>
</div>

  <!--Add Item Button-->
  <div class="text-center mb-4">
    <button type="button" class="btn btn-outline-dark btn-standard" data-bs-toggle="modal" data-bs-target="#addItemModal">
      <i class="bi bi-plus-circle me-1"></i>Add Item
    </button>
  </div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="createForm" action="/items/add/<%= list._id %>" method="POST">
        <input type="hidden" name="list" value="<%= list._id %>">
        <div class="modal-header">
          <h5 class="modal-title" id="addItemModalLabel">Add New Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="createName" class="form-label">Item Name</label>
            <input type="text" name="name" id="createName" class="form-control" placeholder="Item name" maxlength="40" required>
          </div>
          <div class="mb-3">
            <label for="createDescription" class="form-label">Description</label>
            <input type="text" name="description" id="createDescription" class="form-control" placeholder="Item description" maxlength="20">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-dark">Create Item</button>
        </div>
      </form>
    </div>
  </div>
</div>
   
<!-- Edit Modal -->
<div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="updateForm" action="/items/update/:id" method="POST">
        <input type="hidden" name="listId" value="<%= list._id %>">
        <div class="modal-header">
          <h5 class="modal-title" id="editItemModalLabel">Edit Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="_id" id="updateId">
          <div class="mb-3">
            <label for="updateName" class="form-label">Item Name</label>
            <input type="text" name="name" id="updateName" class="form-control" placeholder="New item name" maxlength="40" required>
          </div>
          <div class="mb-3">
            <label for="updateDescription" class="form-label">Description</label>
            <input type="text" name="description" id="updateDescription" class="form-control" placeholder="New item description" maxlength="20">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-dark">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
