      <!-- Edit Modal -->
  <div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <form id="updateForm" action="/items/update/:id" method="POST">
            <div class="modal-header">
              <h5 class="modal-title" id="editItemModalLabel">Edit Item</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="_id" id="updateId">
              <div class="mb-3">
                <label for="updateName" class="form-label">Item Name</label>
                <input type="text" name="name" id="updateName" class="form-control" placeholder="New item name" required>
              </div>
              <div class="mb-3">
                <label for="updateDescription" class="form-label">Description</label>
                <input type="text" name="description" id="updateDescription" class="form-control" placeholder="New item description" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>


      <!-- Display Items -->
      <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
          <ul id="itemList" class="list-group">
              <% items.forEach((item) => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-start" aria-current="true">
                      <div class="d-flex gap-2 w-100 justify-content-between">
                         <div>
                            <h6 class="mb-0"><%= item.name %></h6>
                            <p class="mb-0 opacity-75"><%= item.description %></p>
                          </div>
                          <div> 
                            <button type="button" class="btn btn-primary" onClick="editItem('<%= item._id %>', '<%= item.name %>', '<%= item.description %>')">Edit</button>
                            <button type="button" class="btn btn-secondary" onClick="deleteItem('<%= item._id %>')">Delete</button>
                          </div>
                        
                        </div>
                  </li>
              <% }); %> 
          </ul>
        </div>
      </div>
        <div class="col-4">
          <h3>PICK AT RANDOM</h3>
          <button id="pickButton">Pick</button>
          <h2 id="result"></h3>
        
        </div>
        </div>
      </div>
