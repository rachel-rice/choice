<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lists.</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <%- include('./partials/header') %>
       
    </header>
    <h1>random choice</h1>
    <div class="container">
        
      
      
      <div class="row justify-content-between">

 <!--Add Item-->
      
        <div class="col-4">
          <h3>ADD ITEM:</h3>
       
   

    <form id="createForm" action="/items/add" method="POST"> 
        <input type="text" name="name" placeholder="Item name" required>
        <input type="text" name="description" placeholder="Item description" required>
        <button type="submit">Create Item</button>
    </form>

    <!--Update/Save -->

    <!-- <form id="updateForm" action="/items/update/:id" method="POST">
      <input type="hidden" name="_id" id="updateId">
      <input type="text" name="name" id="updateName" placeholder="New item name" required>
      <input type="text" name="description" id="updateDescription" placeholder="New item description" required>
      <button type="submit">Save changes</button>
    </form> -->

    <!-- Bootstrap Modal -->
<div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="updateForm" action="/items/update/:id" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="editItemModalLabel">Edit Item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="_id" id="updateId">
            <div class="mb-3">
              <label for="updateName" class="form-label">Item Name</label>
              <input type="text" name="name" id="updateName" class="form-control" placeholder="New item name" required>
            </div>
            <div class="mb-3">
              <label for="updateDescription" class="form-label">Description</label>
              <input type="text" name="description" id="updateDescription" class="form-control" placeholder="New item description" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  

    <!-- Display Items -->
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <ul id="itemList" class="list-group">
            <% items.forEach((item) => { %>
                <li class="list-group-item d-flex justify-content-between align-items-start" aria-current="true">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                       <div>
                          <h6 class="mb-0"><%= item.name %></h6>
                          <p class="mb-0 opacity-75"><%= item.description %></p>
                        </div>
                        <div> 
                          <button type="button" class="btn btn-primary" onClick="editItem('<%= item._id %>', '<%= item.name %>', '<%= item.description %>')">Edit</button>
                          <button type="button" class="btn btn-secondary" onClick="deleteItem('<%= item._id %>')">Delete</button>
                        </div>
                       
                      </div>
                </li>
            <% }); %> 
        </ul>
      </div>
    </div>
    <div class="col-4">
      <h3>PICK AT RANDOM</h3>
      <button id="pickButton">Pick</button>
      <h2 id="result"></h3>
  
    </div>
    </div>
    </div>

    <footer>
        <%- include('./partials/footer') %>
    </footer>   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>

</body>
</html>