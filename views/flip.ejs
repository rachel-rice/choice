          <!-- Insert RPS game UI here -->
          <div id="rpsGame">
            <!-- Example layout -->
            <button class="btn btn-outline-dark m-1">Rock</button>
            <button class="btn btn-outline-dark m-1">Paper</button>
            <button class="btn btn-outline-dark m-1">Scissors</button>
            <p class="mt-3 fw-bold" id="rpsResult"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Coin Flip -->
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h4 class="card-title">Coin Flip</h4>
          <h5>Click coin below to flip.</h5>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <img id="coin" class="img-fluid" src="/img/heads.png" alt="Coin">
          </div>
          <h2 id="result"></h2>
